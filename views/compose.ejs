    <form action="/compose" method="post">
        
            <div class="mb-3">
                <label for="titleText" class="form-label">Title</label>
                <input class="form-control" type="text" name="postTitle" id="titleText">
            </div>
            <div class="mb-3">
                <label for="postText" class="form-label">Post</label>
                <textarea class="form-control" type="text" name="postBody" rows="5" id="postText"></textarea>
            </div>

            <button class="btn btn-dark" type="submit" name="button">Publish</button>

       
    </form>

 

